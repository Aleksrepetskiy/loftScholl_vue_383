extends ./main.layout.pug

block content
	.welcome-section 
		section.hero
			.container.hero__container
				header.header 
					a.logo(href="#") РA 
					.header__menu
						nav.menu 
							ul.menu__list
								-
									var menuItems = [
									['Обо мне', '#about.html'],
									['Навыки', '#index.html'],
									['Работы', '#portfolio.html'],
									['Отзывы', '#index.html'],
									]
								each item in menuItems
									li.menu__item
										a.menu__link(href=`${item[1]}`) #{item[0]}
					.header__social
						ul.social
							- 
								var soc = [
								['insta', '#'],
								['vk', 'https://vk.com/id10183899'],
								['github', 'https://github.com/Aleksrepetskiy'],
								['envelope', '#'],
								]
							each item in soc
								li.social__item
									a(href=`${item[1]}`, target="_blank" class=`social__link`)
										+icon(item[0], "social__icon") 
					.burger 
						+icon("menu", "burger__icon")
				.userinfo 
					.userinfo__title Личный сайт #[br] веб разработчика 
					.userinfo__name Репецкий Александр
				.hero__bottom-buttons
					button.scroll-down-btn Скролл  
						+icon("scroll", "scroll-down-btn__icon")
		section.about
			.container.about__container 
				.about__user 
					.user 
						.user__avatar
							.user__avatar-style 
								+image("content/user.jpg", "user__avatar-pic")
						-
							var userInfo = [
								["Проживаю", "Киев"],
								["Возраст", "35 лет"],
								["Родился", "5 декабря 1985"],
							]
						table.user__data
							each item in userInfo
								tr.user__data-row 
									td.user__data-title #{item[0]}
									td.user__data-content #{item[1]}
				.about__content 
					.about__desc Привет, меня зовут
					.about__title Александр Репецкий
					.about__text-info 
						p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
					.about__ps
						| Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
	section.values 
		.container.values__container 
			.values__title
				.values__title-container
					.values__title-text  Чем я могу быть полезен вам
					.values__content 
						p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
			.values__widget
				.values__widget-container 
					#skills-component
	section.works
		.container.works__container
			.section-title Мои работы
			.works__content
				.works-preview
					.works-preview__pics(data-slide="1")
						.works-preview__pics-content
							+image('content/slide_1.jpg', 'works-preview__fullpic')
							.works-preview__thumbs
								ul.thumbs
									- for (var i = 3; i > 0; i--)
										li.thumbs__item(class=`${i === 3 ? 'active' : ''}`)
											a(href="").thumbs__link
												+image(`content/slide_${i}.jpg`, 'thumb__pic')
							.works-preview__buttons
								.square-btns
									a(href="#").square-btns__btn.square-btns__btn--next
									a(href="#").square-btns__btn.square-btns__btn--prev
					.works-preview__info
						- var tags = ['HTML', 'CSS', 'JavaScript'];
						.works-preview__tags
							ul.tags
								each item in tags
									li.tag__item 
										.tag #{item}
						.works-preview__title Сайт школы образования
						.works-preview__desc
							p Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
						a(href="").iconed-link Посмотреть сайт
	section.reviews
		.container.reviews__container
			.slider
				.slider__header 
					.reviews__section-title Что обо мне говорят
					.slider__butons
						a.round-btn.round-btn__prev
						a.round-btn.round-btn__next
				ul.slider__content
					- 
						var reviews = [
						['content/dmitriy.jpg', 'Ковальчук Дмитрий', 'Основатель Loftschool', 'Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!'],
						['content/vladimir.jpg', 'Владимир Сабанцев', 'Преподаватель', 'Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах'],
						]
					each item in reviews
						li.slider__content-item
							.quote
								.quote__text
									p #{item[3]}
								.quote__user
									.user-display
										.user-display__avatar-style
											+image(item[0], 'user-min__avatar-pic')
										.user-display__info
											.user-display__name #{item[1]}
											.user-display__occ #{item[2]}
	footer.footer
		.container.footer__container
			.footer__copyright
				.footer__copyright-year &copy; 2021
				.footer__copyright-userinfo
					.footer__copyright-name Репецкий Александр
					.footer__data-text Личный сайт веб-разработчика
			.footer__data
				.footer__menu
					nav.menu
						ul.menu__list.menu__list--footer
							each item in menuItems
								li.menu__item
									a.menu__link(href=`${item[1]}`) #{item[0]}
				.footer__data-content
					.footer__data-col
						.footer__data-text
							p Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
						.footer__socials
						ul.social.social--round-borders
							each item in soc
								li.social__item
									a(href=`${item[1]}`, target="_blank" class=`social__link`)
										+icon(item[0], "social__icon") 
					.footer__data-col
						.text-quote
							.text-quote__text
								p Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете 
						.text-quote__author Martin Golding
	.popup-menu 
		.popup-menu__container 
			.popup-menu__close
				.close
					+icon("close", "close__icon")
			.popup-menu__menu
				nav.menu 
					ul.menu__list
						-
							var menuItems = [
							['Обо мне', '#about.html'],
							['Навыки', '#index.html'],
							['Работы', '#portfolio.html'],
							['Отзывы', '#index.html'],
							]
						each item in menuItems
							li.menu__item
								a.menu__link(href=`${item[1]}`) #{item[0]}
			.popup-menu__social
				ul.social
					- 
						var soc = [
						['insta', '#'],
						['vk', 'https://vk.com/id10183899'],
						['github', 'https://github.com/Aleksrepetskiy'],
						['envelope', '#'],
						]
					each item in soc
						li.social__item
							a(href=`${item[1]}`, target="_blank" class=`social__link`)
								+icon(item[0], "social__icon")


