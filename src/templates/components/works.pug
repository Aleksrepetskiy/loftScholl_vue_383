script(type="text/x-template")#preview-container 
	.works-preview
		display(
			:currentWork="currentWork",
			:works="works"
			:currentIndex="currentIndex"
			@slide="slide"
		)
		info(
			:currentWork="currentWork",
		)
script(type="text/x-template")#preview-display
	.works-preview__pics(:data-slide="currentIndex + 1")
		.works-preview__pics-content
			img(:src="currentWork.photo").works-preview__fullpic
			.works-preview__thumbs
				thumbs(
					:currentWork="currentWork",
					:works="reversedWorks"
				)
			.works-preview__buttons
				btns(
					@slide="slide"
				)
script(type="text/x-template")#preview-thumbs
	ul.thumbs
		li.thumbs__item(
			v-for="slide in works" :key="slide.id"
			:class="{active: currentWork.id === slide.id}"
		)
			button.thumbs__link
				img(:src="slide.photo").thumb__pic
script(type="text/x-template")#preview-btns
	.square-btns
		button(type="button"
			@click="slide('next')"
		).square-btns__btn.square-btns__btn--next
		button(type="button"
			@click="slide('prev')"
		).square-btns__btn.square-btns__btn--prev

script(type="text/x-template")#preview-info
	.works-preview__info
		.works-preview__tags
			tags(
				:tags="taxtArray"
			)
		.works-preview__title {{currentWork.title}}
		.works-preview__desc
			p {{currentWork.desk}}
		a(:href="currentWork.link").iconed-link Посмотреть сайт

script(type="text/x-template")#preview-tags
	ul.tags
		li.tag__item(v-for="tag in tags")
			.tag {{tag}}
	