.hero {
	background-image: url(../images/hero_bg.jpg);
	background-repeat: no-repeat;
	background-position: top center;
    background-size: cover;
	&__container {
		padding: 60px 0 20px;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	&__bottom-buttons {
		display: flex;
		justify-content: center;
	}
}