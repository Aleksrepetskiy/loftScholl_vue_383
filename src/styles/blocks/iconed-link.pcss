.iconed-link {
	color: $links-color;
	font-weight: bold;
	display: inline-flex;
	text-decoration: none;
	align-items: center;
	&:hover {
		text-decoration: underline;
	}
	&::before{
		content: "";
		background: svg-load('link.svg', fill=#586ED3, width=100%, height=100%) center center no-repeat;
		display: block;
		width: 22px;
		height: 22px;
		margin-right: 16px;
	}
}