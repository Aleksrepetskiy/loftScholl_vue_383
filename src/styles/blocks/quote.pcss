.quote {
	position: relative;
	padding-left: 24%;
	&:before {
		content: "";
		display: block;
		width: 18%;
		height: 37%;
		opacity: .05;
		background: svg-load('quote.svg', fill=$text-color) center center / contain no-repeat;
		position: absolute;
		top: 0;
		left: 0;
	}
	&__text {
		margin-bottom: 31px;
		color: rgba($text-color, .8);
	}
}