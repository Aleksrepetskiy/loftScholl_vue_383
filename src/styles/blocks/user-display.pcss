.user-display {
	display: flex;
	align-items: center;
	&__avatar-style {
		width: 75px;
		height: 75px;
		min-width: 75px;
		border-radius: 50%;
		overflow: hidden;
		margin-right: 31px;
	}
	&__name {
		font-weight: bold;
		font-size: 18px;
		margin-bottom: 12px;

	}
	&__occ {
		font-weight: 600;
		color: rgba($text-color, .5);
	}
}